			</actions>
		</embranchment>
		<embranchment id="2">
			<conditions>
				<var type="Equal" name="state" value="1" id="20520"/>
				<var type="Great" name="get_铜块" value="14"/>
			</conditions>
			<actions>
				<var type="Set" name="state" value="-3" id="20520"/>
