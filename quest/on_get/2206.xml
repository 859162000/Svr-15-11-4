		<quest id="20520" new="1">
		<embranchment id="1">
			<conditions>
				<var type="Equal" name="state" value="1" id="20520"/>
				<var type="Less" name="get_铜块" value="15"/>
			</conditions>
			<actions>
				<notify content="你得到了一块铜块"/>
